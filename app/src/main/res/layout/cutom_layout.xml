<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name :"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/username"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name"
        />
    <TextView
        android:id="@+id/phoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phoneNo :"
        android:layout_below="@id/name"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/userphoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phoneNo"
        android:layout_below="@id/username"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/mailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNo"
        android:layout_marginTop="20dp"
        android:text="mailId :"
        />
    <TextView
        android:id="@+id/user_mailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userphoneNumber"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/mailid"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address :"
        android:layout_below="@id/mailid"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/userAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_mailId"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/address"
        />


</RelativeLayout>